<theme>
	<formatVersion>4</formatVersion>

	<include>./../theme.xml</include>

	<view name="system">
		<text name="system_name_1" extra="true">
			<text>Nintendo</text>
			<fontPath>./../art/nes.ttf</fontPath>
			<alignment>left</alignment>
			<color>a0a0a0</color>
			<fontSize>0.025</fontSize>
			<origin>0 0</origin>
			<pos>0.12 0.308</pos>
			<size>0 0</size>
		</text>
		<text name="system_name_2" extra="true">
			<text>Switch</text>
			<fontPath>./../art/medium.otf</fontPath>
			<alignment>left</alignment>
			<color>a0a0a0</color>
			<fontSize>0.08</fontSize>
			<origin>0 0</origin>
			<pos>0.12 0.325</pos>
			<size>0 0</size>
		</text>
		<image name="dividers" extra="true">
			<tile>false</tile>
			<path>./../art/lines.png</path>
			<color>a0a0a0</color>
			<size>0 0</size>
			<pos>0.12 0.46</pos>
		</image>
		
		<text name="description" extra="true">
			<text>The Nintendo Switch is a video game console developed by Nintendo and released worldwide in most regions on March 3, 2017. The console itself is a tablet that can either be docked for use as a home console or used as a portable device, making it a hybrid console. </text>
			<fontPath>./../art/regular.ttf</fontPath>
			<alignment>left</alignment>
			<forceUppercase>0</forceUppercase>
			<fontSize>0.024</fontSize>
			<color>a0a0a0</color>
			<lineSpacing>1.18</lineSpacing>
			<origin>0 0</origin>
			<pos>0.12 0.565</pos>
			<size>0.32 0.20</size>	  
		</text>
	</view>

	<view name="detailed, video">
		<image name="background" extra="true">
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../art/systembg/switch.png</path>
		</image>
		<textlist name="gamelist">
			<selectorImagePath>./../art/list/selector.png</selectorImagePath>
			<selectorOffsetY>-0.013</selectorOffsetY>
			<selectorHeight>0.058</selectorHeight>
			<selectorColor>a0a0a0</selectorColor>
			<fontPath>./../art/bold.ttf</fontPath>
			<fontSize>0.022</fontSize>
			<lineSpacing>2.75</lineSpacing>
			<primaryColor>ffffff44</primaryColor>
			<secondaryColor>ffff00</secondaryColor>
			<selectedColor>a0a0a0</selectedColor>
			<size>0.265 0.54</size>
			<pos>0.3445 0.5175</pos>
			<horizontalMargin>0.01</horizontalMargin>
			<origin>0.5 0.5</origin>
		</textlist>
	</view>
	<view name="detailed">
		<image name="md_thumbnail">
			<origin>0.5 0.5</origin>
			<pos>0.7245 0.5</pos>
			<maxSize>0.39 0.52</maxSize>
		</image>
	</view>
	<view name="video">   
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.62 0.5</pos>
			<maxSize>0.32 0.44</maxSize>
			<delay>1.5</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>
	</view>	
</theme>
